<idea-plugin>
  <id>io.github.tprado.ristretto</id>
  <name>Ristretto</name>
  <vendor email="thiago.gozzi.prado@gmail.com" url="https://github.com/tprado/ristretto">Thiago Prado</vendor>

  <description>Ristretto provides better defaults for the Java Language.</description>

  <depends>com.intellij.modules.lang</depends>
  <depends>com.intellij.modules.platform</depends>
  <depends>com.intellij.modules.java</depends>
  <depends>com.intellij.gradle</depends>

  <extensions defaultExtensionNs="org.jetbrains.plugins.gradle">
    <projectResolve implementation="io.github.tprado.ristretto.plugins.intellij.RistrettoGradleProjectResolver"/>
  </extensions>

  <extensions defaultExtensionNs="com.intellij">
    <postStartupActivity implementation="io.github.tprado.ristretto.plugins.intellij.RistrettoStartupActivity"/>

    <lang.psiAugmentProvider implementation="io.github.tprado.ristretto.plugins.intellij.RistrettoAugmentProvider"/>

    <localInspection
      groupPath="Ristretto"
      language="JAVA"
      shortName="UnnecessaryFinalModifier"
      bundle="messages.RistrettoInspectionGadgetsBundle"
      key="unnecessary.final.modifier.display.name"
      groupBundle="messages.InspectionsBundle"
      groupKey="group.names.code.style.issues"
      enabledByDefault="true"
      level="WARNING"
      cleanupTool="true"
      implementationClass="io.github.tprado.ristretto.plugins.intellij.UnnecessaryFinalModifierInspection"/>

  </extensions>

  <actions>
    <!-- Add your actions here -->
  </actions>
</idea-plugin>
<idea-plugin>
    <id>org.example.first-intellij-plugin</id>
    <name>Ristretto</name>
    <vendor email="thiago.gozzi.prado@gmail.com" url="https://github.com/tprado/ristretto">Thiago Prado</vendor>

    <description>Ristretto provides better defaults for the Java Language.</description>

    <depends>com.intellij.modules.lang</depends>
    <depends>com.intellij.modules.platform</depends>
    <depends>com.intellij.modules.java</depends>

    <extensions defaultExtensionNs="com.intellij">
        <lang.psiAugmentProvider implementation="ristretto.intellij.plugin.RistrettoAugmentProvider"/>
    </extensions>

    <actions>
        <!-- Add your actions here -->
    </actions>
</idea-plugin>